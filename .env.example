# Blog MCP Server Configuration
# Copy this file to .env and customize as needed

# Base URL for the blog (default: https://idvork.in)
BLOG_BASE_URL=https://idvork.in

# Request timeout in seconds (default: 30)
REQUEST_TIMEOUT=30

# Maximum number of posts to fetch (default: 50)
MAX_POSTS=50

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# FastMCP Cloud Configuration (for HTTP deployment)
# FASTMCP_API_KEY=your_api_key_here
# FASTMCP_ENVIRONMENT=production